<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_background_curved">
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="5dp"

        android:text="Step One:"
        android:textColor="#FF4300"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_username"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:visibility="visible"

        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"

        android:textCursorDrawable="@null"
        android:backgroundTint="#FF4300"

        android:hint="Enter Class Name"
        android:textSize="20sp"
        android:textColor="#000000"
        android:maxLines="1" />

    <Button
        android:id="@+id/Btn_Ok1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="15dp"
        android:layout_gravity="center_horizontal"

        android:textColor="#000000"

        android:text="Next"
        android:textAllCaps="false"
        android:drawableRight="@drawable/right_arrow_16"
        android:textSize="16sp"
        />
</LinearLayout>